@page
@model Blockchain_Testing.Pages.CVs.IndexModel

<h1>My CVs</h1>

<a asp-page="Create" class="btn btn-primary">Create New CV</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Title</th>
            <th>Created At</th>
            <th>Blockchain Hash</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cv in Model.CVs)
        {
            <tr>
                <td>@cv.Title</td>
                <td>@cv.CreatedAt.ToShortDateString()</td>
                <td>@cv.BlockchainHash</td>
                <td>
                    <a asp-page="Details" asp-route-id="@cv.Id" class="btn btn-info btn-sm">View</a>
                    <a asp-page="Edit" asp-route-id="@cv.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-page="Verify" asp-route-id="@cv.Id" class="btn btn-success btn-sm">Verify</a>

                    @* Thêm form xóa *@
                    <form method="post" asp-page-handler="Delete" style="display:inline;">
                        <input type="hidden" name="id" value="@cv.Id" />
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this CV?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
